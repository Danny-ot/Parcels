<!DOCTYPE html>
<html>

<head>
    <title>Danny Shipment</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style type="text/css">
        body {
            background-color: #d3d1d1d3;
        }
    </style>
</head>

<body>
    @using Parcels.Models;
    <div class="container text-center">
        <h1>Danny Shipment</h1>
        @if (Model.Count == 0)
        {
            <p class="h5 mt-5">There are no parcels yet</p>
        }
        else
        {
            <p class="h5 mt-5">This are the parcels that are ready to be shipped</p>
            <div class="row justify-content-around mt-3">
                @foreach (Container product in Model)
                {
                    <div class="col-md-3 text-center py-5 m-3 bg-dark text-white">
                        <h1 class="text-center">@product.Product</h1>
                        <h5>Length - @product.Length cm</h5>
                        <h5>Breadth - @product.Breadth cm</h5>
                        <h5>Height - @product.Height kg</h5>
                        <h5>Weight - @product.Weight kg</h5>
                        <h5>Volume - @product.Volume() cm<sup>3</sup></h5>
                        <h4>$@product.CostToShip()</h4>
                        <div class="text-center">
                            <a class="btn btn-primary" href="/parcels/ship">Ship</a>
                        </div>
                    </div>
                }
            </div>
        }
        <a href="/parcels/new">Add new Parcel</a>
    </div>
</body>

</html>